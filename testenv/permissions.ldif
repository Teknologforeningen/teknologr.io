# Use this file to customize OpenLDAP permissions
dn: olcDatabase={1}mdb,cn=config
changetype: modify
delete: olcAccess
-
add: olcAccess
olcAccess: to * by dn.exact=gidNumber=0+uidNumber=0,cn=peercred,cn=external,cn=auth manage by * break
olcAccess: to attrs=userPassword,shadowLastChange by self write by dn="cn=admin,dc=teknologr,dc=io" write by anonymous auth by * none
olcAccess: to * by self read by dn="cn=admin,dc=teknologr,dc=io" write by * none
